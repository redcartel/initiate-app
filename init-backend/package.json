{
  "name": "init-backend",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "dev": "ts-node-dev --inspect --respawn ./index.ts",
    "build": "esbuild ./index.ts --bundle --outfile=index.js --platform=node --target=node20",
    "start": "npm run stop && pm2 start index.js --name init-backend",
    "redis": "docker run --rm -p 6379:6379 --name init-redis --detach redis",
    "stop": "pm2 stop init-backend",
    "stop-redis": "docker stop init-redis",
    "logs": "pm2 logs init-backend --lines 480"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/node": "^22.10.2",
    "esbuild": "^0.24.2",
    "pm2": "^5.4.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/morgan": "^1.9.9",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "js-yaml": "^4.1.0",
    "morgan": "^1.10.0",
    "nocache": "^4.0.0",
    "redis": "^4.7.0"
  }
}